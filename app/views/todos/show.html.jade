.hero-unit
  h2.title= todo.title
  != linkTo('Edit this todo', editTodoPath(params.id), {class: 'btn pull-right'})

h2 Todo Properties
each property, key in todo
  if key !== 'saved'
    .row.list-item
      .span4
        h3= key
      .span8
        h3
          i.icon-list-alt
          span(class=key)= property
